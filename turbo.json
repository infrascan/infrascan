{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "codegen": {
      "cache": false
    },
    "fmt": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "clean": {
      "cache": false
    },
    "docs": {
      "cache": false,
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "README.md", "typedoc.base.json"]
    }
  }
}
