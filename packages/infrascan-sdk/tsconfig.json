{
	"compilerOptions": {
		"target": "ES2015",
		"module": "Node16",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"allowJs": true,
		"declarationDir": "dist"
	},
	"exclude": ["node_modules", "src/**/*.test.ts", "dist"]
}
